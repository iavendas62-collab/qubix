# QUBIX Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# QUBIC BLOCKCHAIN CONFIGURATION
# ============================================

# Network: testnet or mainnet
QUBIC_NETWORK=testnet

# Qubic RPC Endpoint
# TODO: Replace with actual testnet RPC URL
# Find at: https://docs.qubic.org/
QUBIC_RPC_URL=https://testnet-rpc.qubic.org

# Qubic WebSocket Endpoint
QUBIC_WS_URL=wss://testnet-ws.qubic.org

# Qubic Block Explorer
QUBIC_EXPLORER_URL=https://testnet.qubic.org

# Platform Wallet (for escrow)
# Generate a testnet wallet and paste credentials here
# KEEP THIS SECRET! Never commit to git!
QUBIC_PLATFORM_SEED=your_wallet_seed_phrase_here
QUBIC_PLATFORM_ADDRESS=YOUR55CHARACTERQUBICADDRESSHERE

# Transaction Settings
QUBIC_CONFIRMATIONS=3
QUBIC_GAS_LIMIT=1000000

# ============================================
# DATABASE
# ============================================

# PostgreSQL connection
DATABASE_URL=postgresql://user:password@localhost:5432/qubix

# ============================================
# SERVER
# ============================================

# Backend port
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# ============================================
# SECURITY
# ============================================

# JWT secret for authentication
JWT_SECRET=your_jwt_secret_here_change_in_production

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# OPTIONAL SERVICES
# ============================================

# IPFS for dataset storage (optional)
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# Monitoring (optional)
SENTRY_DSN=

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
